<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--  Bottom Sheet  -->

    <style name="BaseBottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />

    <style name="BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:background">@drawable/background_base_bottom_sheet</item>
    </style>

    <!-- Headline -->

    <style name="customTextAppearanceHeadline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/text_size_XXL</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0.008</item>
    </style>

    <style name="customTextAppearanceHeadline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/text_size_XL</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="customTextAppearanceHeadline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textSize">@dimen/text_size_L</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="customTextAppearanceLabel" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_M</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">@dimen/text_letter_spacing</item>
    </style>

    <!-- Text Heading -->

    <style name="TextH1">
        <item name="android:textAppearance">@style/customTextAppearanceHeadline1</item>
        <item name="android:lineSpacingExtra">8sp</item>
    </style>

    <style name="TextH2">
        <item name="android:textAppearance">@style/customTextAppearanceHeadline2</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <style name="TextH3">
        <item name="android:textAppearance">@style/customTextAppearanceHeadline3</item>
        <item name="android:lineSpacingExtra">3sp</item>
    </style>

    <!-- Text Label -->

    <style name="TextLabel">
        <item name="android:textAppearance">@style/customTextAppearanceLabel</item>
        <item name="android:lineSpacingExtra">9sp</item>
    </style>

    <style name="TextLabel.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TextLabel.Red">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextLabel.Blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_S</item>
    </style>

    <!-- Digits -->

    <style name="trTextAppearanceNumber1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:fontFamily">@font/regular</item>
        <item name="fontFamily">@font/regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_XXXLs</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>


    <!-- Button -->

    <style name="customButton" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/medium</item>
        <item name="fontFamily">@font/medium</item>
        <item name="android:textSize">@dimen/text_size_M</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <!-- UI Buttons -->

    <style name="UiButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAppearance">@style/customButton</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">100dp</item>
        <item name="android:minWidth">110dp</item>
        <item name="android:maxWidth">110dp</item>
        <item name="cornerRadius">@dimen/default_border_radius</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="UiButton.Confirm">
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/background_state_black</item>
        <item name="android:minWidth">400dp</item>
    </style>

    <style name="UiButton.Black">
        <item name="rippleColor">@color/white</item>
        <item name="backgroundTint">@color/background_state_black</item>
        <item name="android:minWidth">200dp</item>
    </style>

    <style name="UiButton.Green">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/background_state_green</item>
    </style>

    <style name="UiButton.Blue">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/background_state_blue</item>
    </style>

    <style name="UiButton.Red">
        <item name="rippleColor">@color/ripple_light</item>
        <item name="backgroundTint">@color/background_state_red</item>
    </style>

    <!--  EditText  -->

    <style name="ThemeOverlay.TR.EditText" parent="">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/blue</item>
        <item name="colorControlHighlight">@color/lightGrey</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CurrencyEditText">
        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="android:textAppearance">@style/trTextAppearanceNumber1</item>
        <item name="android:textSize">@dimen/text_size_XXXL</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">@color/lineDarkGrey</item>
    </style>

    <!-- Timeline Start -->

    <style name="TextTimeline">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_timeline</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:lineSpacingExtra">2sp</item>
    </style>

    <style name="TextTimeline.Bold" parent="TextTimeline">
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextTimeline.Small">
        <item name="android:textSize">@dimen/text_size_timeline_small</item>
        <item name="android:fontFamily">@font/regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:letterSpacing">@dimen/text_letter_spacing</item>
    </style>

    <!-- Timeline End -->
</resources>
